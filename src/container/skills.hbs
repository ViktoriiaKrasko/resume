{{! Це контейнер для сторінки зі скілами }}

<div>
  {{#with main}}
  <main>
    <section>
      {{> title data="All Skills" big=true}}
      <ul>
        {{#each skills}}
        <li>
          {{name}}
          {{#if point includeZero=true}} ({{point}}) {{/if}}
          {{#if isTop}} (TOP) {{/if}}
          {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
          {{#unless point}} 
            {{#if point includeZero=true}}
            (почали вивчати)
            {{/if}}
          {{/unless}}
        </li>
        {{/each}}
      </ul>
    </section>

    <section>
      {{> title data="My Hobbies"}}
      <ol>
        {{#each hobbies}}
        <li>
          {{name}}
          {{#if isMain}} (favourite) {{/if}}
        </li>
        {{/each}}
      </ol>
    </section>
  </main>
  {{/with}}
</div>