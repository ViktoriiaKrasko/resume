{{! Це контейнер для сторінки Shopcatalog }}

<main class="px-3">
    <br/>


    {{> breadcrumb}}

    <br/>

    <h1>{{header}}</h1>

    <div class="row">
    {{#each sortBlock}}
    <div class="col-2">
        <select class="form-select">
            <option selected disabled>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
        </select>
        </div>
    {{/each}}
    </div>

    <div class="row mb-5">
        {{#with filterBlock}}
        <div class="col-4 mt-5">
            <div class="card">
                <div class="m-2">{{sellers.title}}</div>
                {{#each sellers.list}}
                <div class="form-check mx-2">
                    <label class="form-check-label ps-2" >{{value}}</label>
                    <input class="form-check-input" type="checkbox">
                </div>
                 {{/each}}
                 <hr class="mx-3"/>
                 <div class="m-2">{{brands.title}}</div>
                 <input class="form-control m-3" placeholder="{{brands.input.placeholder}}" style="width:auto;">
                 {{#each brands.options}}
                 <div class="form-check mx-2">
                    <label class="form-check-label ps-2">{{value}}</label>
                    <input type="checkbox" class="form-check-input">
                 </div>
                 {{/each}}
                 <hr class="mx-3"/>
                 <div class="m-2">{{price.title}}</div>
                    <div class="form-check mx-2">
                        <div class="row">
                            <input class="form-control mx-2" placeholder="{{price.range.from}}" style="width:100px;">
                            <input class="form-control mx-2" placeholder="{{price.range.to}}" style="width:100px;">
                            <button class="btn btn-outline-secondary mx-2" href="{{price.button.link}}" style="width:100px;">{{price.button.text}}</button>
                        </div>
                    </div>
                 <hr class="mx-3"/>
                 {{#each filterList}}
                 <div class="m-2">{{title}}</div>
                    {{#each options}}
                    <div class="form-check mx-2">
                        <label class="form-check-label ps-2">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    <hr class="mx-3"/>
                 {{/each}}
            </div>
        </div>
        {{/with}}


        
        <div class="col-8">
            <div class="row">
               {{> catalogItem}}
            </div>
        </div>
    </div>

    {{> shopaction}}

</main>