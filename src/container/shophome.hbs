{{! Це контейнер для сторінки Shophome }}

<main class='p-5'>
  {{#with navigation}}
    <div class='card'>
      <div class='row'>
        <div class='col-6'>
          <h1 class='ps-2'>{{Logo}}</h1>
        </div>
        <div class='col-6'>
          <nav class='nav justify-content-end pt-2'>
            {{#each links}}
              <a
                class='nav-link'
                href='{{href}}'
              >{{text}}</a>
            {{/each}}
            <a
              class='nav-link disabled'
              href='#'
              tabindex='-1'
              aria-disabled='true'
            >Disabled</a>
          </nav>
        </div>
      </div>
    </div>
  {{/with}}

  {{#with newsBlock}}
    <h2 class='text-center pt-5 pb-2'>
      {{title}}
    </h2>
    <div class='row'>
      {{#each cards}}
        <div class='col-3 mb-2 p-1'>
          <div class='card-deck'>
            <div class='card text-bg-dark h-100'>

              <div class='card-header border-light'>

                {{title}}
                {{#if isTop}}
                  <div
                    class='badge rounded-pill text-bg-success'
                  >New</div>
                {{/if}}
                {{#if idNew}}
                  <div
                    class='badge rounded-pill text-bg-danger'
                  >Top</div>
                {{/if}}

              </div>

              <div class='card-body'>
                {{description}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/with}}

  <hr class='my-5' style='border-width:3px;' />

  {{#with goodsBlock}}
    <nav class='nav nav-tabs mb-5'>
      {{#each tabs}}
        {{#if isActive}}
          <a href='#' class='nav-link active'>{{text}}</a>
         {{else}}
          {{#if isDisabled}}
            <a
              href='#'
              class='nav-link disabled'
            >{{text}}</a>
            {{else}}
            <a href='#' class='nav-link'>{{text}}</a>
          {{/if}}
        {{/if}}
      {{/each}}
    </nav>


    <div class='row'>
      {{#each cards}}
        <div class='col-4 mb-2 p-1'>
          <div class='card-deck'>
            <div class='card h-100'>

                <img class='card-img-top' src="{{image}}" alt="{{title}}" style="height:100px; width=100%">
                <div class="card-body">

                
                <div class="card-title">
                <strong>{{title}}</strong>
                {{#if isHot}}
                  <div
                    class='badge rounded-pill text-uppercase text-bg-warning ms-2'
                  >Hot!</div>
                {{/if}}
                {{#if idNew}}
                  <div
                    class='badge rounded-pill text-bg-primary ms-2'
                  >New</div>
                {{/if}}
                </div>
                {{description}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{/with}}

<hr class="my-5" />

{{#with subscribe}}
    <div class='card text-bg-dark'>
      <div class='row'>
        <div class='col-6'>
          <h2 class='ps-2 pt-2'>{{header}}</h2>
          <p class="ms-2 mt-3">{{description}}</p>
        </div>
        <div class='col-6'>
          <nav class='nav justify-content-end mt-3'>
            {{#each buttons}}
              <button
                type="{{type}}"
                class='btn btn-primary mt-3 me-3'
                href='{{link}}'
              >{{text}}</button>
            {{/each}}
          </nav>
        </div>
      </div>
    </div>
  {{/with}}

  <hr class="my-5" />

  {{#with service}}
    <div class="card text-bg-success p-2">
        <div class="text-center">
           <h2>{{title}}</h2>
           <p>{{description}}</p>
           {{#each buttons}}
           <button class="btn btn-primary" href="{{link}}" type="{{type}}">
                {{text}}
           </button>
           {{/each}}
        </div>
    </div>
  {{/with}}

  <hr class="my-5" />

 
      
 <div class="row">
   {{#each footer}}
     <div class="col-2">
       {{#each this}}
         <div class="nav flex-column">
           <div class="nav-item">  
             <a
             href='{{link}}'
             class='btn btn-link'
             >{{text}}</a>
           </div>
         </div>
      {{/each}}
           <div class="nav-item">
             <a
             href='#'
             class='btn btn-link disabled'
             >Disabled</a>
           </div>
     </div>
  {{/each}}
 </div>
          
  

</main>