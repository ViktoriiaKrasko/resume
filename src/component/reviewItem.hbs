{{#each reviewList}}
  <div class='card mb-5'>
    <div class='row'>
      <div class='col-12'>
        <div class='card mx-2 mt-2'>
          {{#with title}}
            <div class='row'>
              <div class='col-8'>
                <div class='mt-4 px-2'><strong
                  >{{userName}}</strong></div>
                <div class='px-2'>{{caption}}</div>
              </div>
              <div class='col-4 p-4'>
                <p class='text-end'>{{date}}</p>
              </div>
            </div>
          {{/with}}
        </div>
        {{#with reviewBody}}
          <div class='card mx-2'>
            <div class='my-2 px-2'>{{seller.title}}:
              {{seller.value}}</div>
            <div class='my-2 px-2'>
              {{rating.title}}:
              {{rating.value}}
            </div>
            {{#each text}}
              <div class='my-2 px-2'>
                {{this}}
              </div>
            {{/each}}
            <div class='mt-2 px-2'>
              <strong>{{advantages.title}}: </strong>
            </div>
            <div class='px-2'>
              {{advantages.text}}
            </div>
            <div class='mt-2 px-2'>
              <strong>{{disadvantages.title}}: </strong>
            </div>
            <div class='px-2'>
              {{disadvantages.text}}
            </div>
            <div class='row'>
              {{#each images}}
                <img
                  src='{{this}}'
                  alt='product-image'
                  style='width:100px;height:100px;'
                  class='m-2 mt-4'
                />
              {{/each}}
            </div>
          </div>

          <div class='row'>
            <div class='col-1'></div>
            <div class='col-11 my-2'>
              {{#each comments}}
                <div class='card my-2'>
                  <div class='row'>
                    <div class='col-10'>
                      <div class='p-2'><strong
                        >{{userName}}</strong></div>
                      <div class='p-2'>{{text}}</div>
                    </div>
                    <div class='col-2'>
                      <div
                        class='text-end p-2'
                      >{{date}}</div>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{/with}}
      </div>
    </div>
  </div>
{{/each}}