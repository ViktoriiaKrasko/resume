{{#with service}}
  <div class='card text-bg-success p-2'>
    <div class='text-center'>
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      {{#each buttons}}
        <button
          class='btn btn-primary'
          href='{{link}}'
          type='{{type}}'
        >
          {{text}}
        </button>
      {{/each}}
    </div>
  </div>
{{/with}}